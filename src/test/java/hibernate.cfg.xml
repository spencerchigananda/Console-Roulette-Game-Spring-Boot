<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mariadb://localhost:3306/console_roulette</property>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <mapping class="com.spencerchigananda.consoleroulettegame.models.Bet"/>
        <mapping class="com.spencerchigananda.consoleroulettegame.models.BetResult"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>